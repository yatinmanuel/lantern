{
  "name": "intelligent-pxe-server",
  "version": "1.0.0",
  "description": "Lantern - PXE server for automated OS installation",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "postinstall": "npm install --prefix web",
    "update:deps": "npx npm-check-updates -u && npx npm-check-updates -u --prefix web && npm install && npm install --prefix web",
    "build": "tsc && npm run build:web",
    "build:backend": "tsc",
    "build:web": "cd web && npm run build",
    "start": "node dist/index.js",
    "dev": "concurrently -n \"NATS,BACKEND,WORKER,WEB\" -c \"magenta,blue,yellow,green\" \"npm run dev:nats\" \"npm run dev:backend\" \"npm run dev:worker\" \"npm run dev:web\"",
    "dev:backend": "tsx watch src/index.ts",
    "dev:worker": "tsx watch src/jobs/worker.ts",
    "dev:nats": "bash scripts/dev-nats.sh",
    "dev:web": "cd web && npm run dev",
    "start:worker": "node dist/jobs/worker.js",
    "migrate": "tsx scripts/migrate-sqlite-to-postgres.ts"
  },
  "keywords": [
    "pxe",
    "boot",
    "os-installation",
    "ai",
    "automation"
  ],
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-session": "^1.19.0",
    "multer": "^2.0.2",
    "nats": "^2.29.3",
    "pg": "^8.16.0",
    "ssh2": "^1.17.0",
    "winston": "^3.19.0",
    "ws": "^8.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/express-session": "^1.18.2",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.0.10",
    "@types/pg": "^8.15.2",
    "@types/ssh2": "^1.15.5",
    "@types/ws": "^8.18.1",
    "better-sqlite3": "^12.6.2",
    "concurrently": "^9.2.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "brace-expansion": "4.0.1",
    "decompress-response": "10.0.0",
    "file-entry-cache": "11.1.2",
    "find-up": "8.0.0",
    "globals": "17.1.0",
    "ini": "6.0.0",
    "js-tokens": "10.0.0",
    "lru-cache": "11.2.5",
    "minimatch": "10.1.1",
    "p-limit": "7.2.0",
    "react-is": "19.2.4",
    "string-width": "8.1.0",
    "strip-json-comments": "5.0.3",
    "supports-color": "10.2.2",
    "which": "6.0.0"
  }
}
